   <!-- SOLUTION #1. Use a form to call POST which will send the id 
        SOLUTION #2. Use similar approach as before and put id in the url-->
   
   <section>
      <div class="container">
         {{#each sections}}
         <form class="names" action="/items" method="POST">
            <!--<a class="sections button blackText" href="#" id="{{id}}">{{name}}</a>-->
               {{#if category}}
               {{else}}
               <input id="id" name="id" type="hidden" value="{{id}}"/>
               <input type="submit" class="sections button blackText" id="{{id}}" name="{{id}}" value="{{name}}"/>
               {{/if}}
            </form>
         {{/each}}
      </div>
   </section>

