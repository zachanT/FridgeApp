<!doctype html>

<html>
<head>
   <title>Food Group</title>
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
   <script src="/js/sections.js"></script>
   <!-- <link href="/css/style.css" rel="stylesheet" /> -->
   
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
   <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
   <link href="/css/improved.css" rel="stylesheet" />

</head>
<body>
   <div id="logout" class="btn"><a href="/logout" class="blackText">Logout</a></div>
   <header id="main-header">
      <div class="container">
         <h1 class="tabHeaders">Sections</h1>
      </div>
   </header>
   
   <section>
      <div class="container">
         {{#each sections}}
         <form class="names" action="/items" method="POST">
            <!--<a class="sections button blackText" href="#" id="{{id}}">{{name}}</a>-->
               {{#if category}}
               {{else}}
               <input id="id" name="id" type="hidden" value="{{id}}"/>
               <input type="submit" class="sections button blackText" id="{{id}}" name="{{id}}" value="{{name}}"/>
               {{/if}}
            </form>
         {{/each}}
      </div>
   </section>

   <button id="addSectionbtn" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i></button>

   <!--Add section popup-->
   <div id="myModal" class="modal fade">
      <div class="modal-dialog" role="document">
         <div class="modal-content">
            <div class="modal-header">
               <h1>Add Section</h1>
               <span class="close"><i class="fa fa-window-close"></i></span>
               <!--  <header id="addSection-header">Add Section</header> -->
            </div>
            <div class="modal-body">
               <form id="addSectionForm" role="form" method="get" action="/addSection">
                  <label for="sectionName" class="col-form-label">Section Name:</label>
                  <input type="text" id="sectionName" placeholder="Mini fridge" name="sectionName" class="form-control" required /><br />
                  <div class="modal-footer">
                     <input class="btn btn-primary btn-block adding" type="submit" id="confirmSectionbtn" value="Confirm" />
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>

   <!-- Nav bar -->
   <div class="container-fluid">
      <div class="row fixed-bottom">
         <div class="col bottomNav">
            <a href="" class="blackText">
               <i class="fa fa-cutlery"></i>
               Sections
            </a>
         </div>
         <div class="col bottomNav">
            <a href="shoppingList" class="blackText">
               <i class="fa fa-list-alt"></i>
               Shopping List
            </a>
         </div>
         <div class="col bottomNav">
            <a href="group" class="blackText">
               <i class="fa fa-users"></i>
               Group
            </a>
         </div>
      </div>
   </div>

   <!-- Needed for Bootstrap -->
   <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>