<!doctype html>

<html>
<head>
   <title>Food Group</title>

   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
   <script src="/js/javascript.js"></script>
  <!--  <link href="/css/style.css" rel="stylesheet" /> -->

   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
   <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
   <link href="/css/improved.css" rel="stylesheet" />
</head>
<body>
   <header id="main-header">
      <div class="container">
         <h1 class="tabHeaders listHeader">Group</h1>
         <ul>
            {{#each group}}
            {{#if message}}
               <li>{{message}}</li>
            {{/if}}
            {{/each}}
         </ul>
      </div>
   </header>

   <section>
      <div class="container-fluid">
         {{#each group}}
            {{#if message}}
            {{else}}
            <h1 class="member-group" id="sections"><i class="fa fa-user"></i> {{name}}</h1>
            {{/if}}
         {{/each}}
      </div>
   </section>
   <button id="addSectionbtn"><i class="fa fa-plus"></i></button>

   <!--Invite Member popup-->
   <div id="myModal" class="modal">
      <div class="modal-content">
         <span class="close"><i class="fa fa-window-close"></i></span>
         <h1>Invite Member</h1>
         <form id="addMemberForm" role="form" method="post" action="/group">
            <input type="email" id="email" placeholder="Enter Email" name="email" required />
            <input class="adding" type="submit" id="confirmSectionbtn" value="Invite" />
         </form>
         <!--<button id="confirmSectionbtn">Add Section</button>-->
      </div>
   </div>

   <!-- Nav bar -->
   <div class="container-fluid">
      <div class="row fixed-bottom">
         <div class="col bottomNav">
            <a href="/" class="blackText">
               <i class="fa fa-cutlery"></i>
               Sections
            </a>
         </div>
         <div class="col bottomNav">
            <a href="shoppingList" class="blackText">
               <i class="fa fa-list-alt"></i>
               Shopping List
            </a>
         </div>
         <div class="col bottomNav">
            <a href="group" class="blackText">
               <i class="fa fa-users"></i>
               Group
            </a>
         </div>
      </div>
   </div>

   <!-- Needed for Bootstrap -->
   <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>